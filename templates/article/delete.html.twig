{% extends 'base.html.twig' %}

{% block title %}Supprimer l'article{% endblock %}

{% block body %}
    <div class="container-lg">
        <h1>Confirmer la suppression de l'article</h1>

        <div class="alert alert-warning" role="alert">
            <strong>Attention :</strong> Voulez-vous vraiment supprimer cet article ?
        </div>

        <div class="article-details mb-4">
            <h2>{{ article.name }}</h2>
            <p><strong>Prix :</strong> {{ article.price }} €</p>
            <p><strong>Description :</strong> {{ article.description }}</p>
            <p><strong>Catégories :</strong></p>
            <ul>
                {% for category in article.categories %}
                    <li>{{ category.name }}</li>
                {% endfor %}
            </ul>
            <p><strong>Mots-clés :</strong></p>
            <ul>
                {% for keyword in article.keyWords %}
                    <li>{{ keyword.word }}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="confirmation-form">
            {{ form_start(form, {attr: {class: 'form-inline'}}) }}

            <div class="form-group">
                <div class="d-flex justify-content-between">
                    {{ form_widget(form.delete, {label: 'Supprimer', attr: {class: 'btn btn-danger'}}) }}
                    {{ form_widget(form.cancel, {label: 'Annuler', attr: {class: 'btn btn-secondary'}}) }}
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
