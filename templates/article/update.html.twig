{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Edit Article</h1>
        <p class="text-muted">Modify the details of your article below</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h3 class="card-title mb-4">Edit Article Details</h3>
                    <hr>
                    {{ include('article/_form.html.twig', {submit_label: "Save Changes", form: form}, with_context=false) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
