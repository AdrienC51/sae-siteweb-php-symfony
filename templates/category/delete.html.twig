{% extends 'base.html.twig' %}

{% block title %}Delete Category{% endblock %}

{% block body %}
    <div class="container-lg">
        <h1>Confirm category delete</h1>

        <div class="alert alert-warning" role="alert">
            <strong>Warning :</strong> Are you sure you want to delete this category ?
        </div>

        <div class="article-details mb-4">
            <h2>{{ category.name }}</h2>
            <p><strong>Articles :</strong></p>
            <ul>
                {% for article in category.articles %}
                    <li>{{ article.name }}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="confirmation-form">
            {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}

            <div class="form-group">
                <div class="d-flex justify-content-between">
                    {{ form_widget(form.delete, { 'label': 'Delete', 'attr': {'class':'btn btn-danger'} }) }}
                    {{ form_widget(form.cancel, { 'label': 'Cancel', 'attr': {'class':'btn btn-secondary'}  }) }}
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
