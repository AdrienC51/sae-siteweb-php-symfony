{% extends 'base.html.twig' %}

{% block title %}Paiement confirmé{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="alert alert-success">
        <h4 class="alert-heading">Paiement accepté !</h4>
        <p>Votre paiement a été traité avec succès.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Récapitulatif de la commande n°{{ order.id }}</h5>
            <p>Total payé : {{ order.price }} €</p>
            <p>Status : {{ order.status }}</p>
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_shop') }}" class="btn btn-primary">
            Retourner à la boutique
        </a>
    </div>
</div>
{% endblock %}
