{% extends 'base.html.twig' %}

{% block title %}Paiement sécurisé par carte{% endblock %}

{% block body %}
    <div class="payment-container">
        <h2>Paiement sécurisé par carte</h2>

        <form method="POST" action="{{ path('app_purchase') }}">
            <div class="form-group">
                <label for="cardNumber">Numéro de carte</label>
                <input type="text" id="cardNumber" name="cardNumber" placeholder="____ ____ ____ ____" required>
            </div>

            <div class="form-group">
                <label for="expiryDate">Date d'expiration</label>
                <input type="text" id="expiryDate" name="expiryDate" placeholder="MM / YY" required>
            </div>

            <div class="form-group">
                <label for="cvv">CVV</label>
                <input type="text" id="cvv" name="cvv" placeholder="---" required>
            </div>

            <div class="form-group">
                <label for="cardHolder">Titulaire de la carte</label>
                <input type="text" id="cardHolder" name="cardHolder" placeholder="Titulaire de la carte" required>
                <p class="error">Veuillez saisir un titulaire de la carte valide, ce champ doit être complété.</p>
            </div>

            <div class="form-group">
                <label>Enregistrer ma carte pour mes prochains achats</label>
                <div class="radio-group">
                    <input type="radio" id="saveCardYes" name="saveCard" value="yes">
                    <label for="saveCardYes">Oui</label>
                    <input type="radio" id="saveCardNo" name="saveCard" value="no" checked>
                    <label for="saveCardNo">Non</label>
                </div>
            </div>

            <button type="submit" class="submit-btn">Valider et payer la commande</button>
        </form>

    </div>
{% endblock %}
