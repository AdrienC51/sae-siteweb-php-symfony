{% extends 'base.html.twig' %}

{% block title %}Restocking n°{{ restocking.id }}{% endblock %}

{% block body %}
    <div class="box_title">
        <h1>Restocking n°{{ restocking.id }}</h1>
    </div>
    <dl class="order">

    </dl>
    <div class="profilepage">
        <dl class="informations">
            <h2> Informations</h2>
            <dt>Restocking Date</dt>
            <dd>{{ restocking.restockDate|date('d/m/Y') }}</dd>
            <dt>Price</dt>
            <dd>{{ restocking.price }}€</dd>
            <dt>Status</dt>
            <dd>{{ restocking.status }}</dd>
        </dl>
        <div class="separator"></div>
        <div class="orders">
            <h2>Products</h2>
            <table class="line-table">
                <tr>
                    <th>Quantity</th>
                    <th>Article</th>
                    <th>Price</th>
                </tr>
            {% for restockingLine in restocking.restockinglines %}
                <tr class="order-line">
                    <td>{{ restockingLine.quantity }}</td>
                    <td>{{ restockingLine.article.name }}</td>
                    <td>{{ restockingLine.price }}€</td>
                </tr>
            {% endfor %}
            </table>

        </div>
    </div>
{% endblock %}
